<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgot_password_page">
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="23dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="30dp"
                app:cardBackgroundColor="@color/purple_700"
                app:cardCornerRadius="22dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="23dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/logo_banner"></ImageView>

                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>


            <EditText
                android:id="@+id/email_forgot_pass"
                android:layout_width="300dp"

                android:layout_height="50dp"
                android:layout_below="@+id/card1"
                android:layout_centerInParent="true"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/custom_email_focus"
                android:drawablePadding="13dp"
                android:hint="Email address"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="16dp">

            </EditText>

            <Button
                android:id="@+id/reset_btn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_forgot_pass"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="23dp"
                android:background="@drawable/btn_curve_blue"
                android:text="Reset password"
                android:textColor="@color/white"
                android:textStyle="bold"></Button>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>