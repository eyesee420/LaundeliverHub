<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="@android:color/darker_gray"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="5dp"
            app:cardCornerRadius="6dp">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                app:cardCornerRadius="4dp">
                <ImageView
                    android:id="@+id/shop_imageview"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_baseline_image_24">
                </ImageView>
            </androidx.cardview.widget.CardView>
        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:id="@+id/shop_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/card1"
            android:paddingStart="15dp"
            android:text="yawa laundry shop"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"

            android:textSize="16dp"></TextView>

        <TextView
            android:id="@+id/namextx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_name_txt"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/card1"
            android:paddingStart="15dp"
            android:text="Laundry Shop Name"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textColor="@color/grey_font"
            android:textSize="12dp"

            ></TextView>

        <TextView
            android:id="@+id/laundry_location_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/namextx"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="28dp"
            android:layout_toRightOf="@+id/card1"
            android:paddingStart="15dp"
            android:text="# oracle central bicutan taguig city"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"

            android:textSize="14dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/laundry_location_txt"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-1dp"
            android:layout_marginBottom="7dp"
            android:layout_toRightOf="@id/card1"
            android:paddingStart="15dp"
            android:text="Laundry Shop Location"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textSize="12dp"
            android:textColor="@color/grey_font"
            tools:ignore="RtlCompat"></TextView>

        <!--        <View-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="1dp"-->
        <!--            android:layout_alignParentEnd="true"-->
        <!--            android:layout_marginStart="115dp"-->
        <!--            android:layout_marginTop="60dp"-->
        <!--            android:layout_marginEnd="12dp"-->
        <!--            android:background="@android:color/darker_gray"></View>-->


        <!--        <Button-->
        <!--            android:layout_width="35dp"-->
        <!--            android:layout_height="35dp"-->
        <!--            android:layout_alignParentEnd="true"-->
        <!--            android:layout_marginTop="88dp"-->
        <!--            android:layout_marginEnd="20dp"-->
        <!--            android:background="@drawable/ic_baseline_play_circle_24">-->
        <!--        </Button>-->


        <RatingBar
            android:id="@+id/StarRatings"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shop_name_txt"
            android:layout_marginStart="95dp"
            android:layout_marginTop="12dp"
            android:isIndicator="true"
            android:max="5"
            android:rating="3"
            android:scaleX=".7"
            android:scaleY=".7"

            android:theme="@style/MyRatingBar" />

        <TextView
            android:id="@+id/ratenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namextx"
            android:layout_marginStart="140dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/card1"
            android:text="(0)"
            android:textSize="12dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:textColor="@color/grey_font"></TextView>


        <Button
            android:id="@+id/btn_delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_baseline_delete_24"
            app:backgroundTint="@color/colorAccent"></Button>
        <Button
            android:id="@+id/btn_update"
            android:layout_below="@+id/btn_delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_baseline_edit_24"
            app:backgroundTint="@color/my_green"></Button>

    </RelativeLayout>


</androidx.cardview.widget.CardView>