<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_nav"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="11dp"
            app:backgroundTint="@color/purple_700"
            android:background="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></Button>

        <TextView
            android:id="@+id/shopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop name "
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cardView"
            app:layout_constraintStart_toEndOf="@+id/btn_back"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            app:cardCornerRadius="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/dialog_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/info" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_nav"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"

                android:layout_marginTop="5dp"

                app:cardBackgroundColor="#E0E0E0"
                app:cardCornerRadius="4dp">

                <ImageView
                    android:id="@+id/shop_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bb" />

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/textimp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card2"
                android:layout_marginTop="4dp"
                android:paddingStart="10dp"
                android:text="Note: Please make sure to match the weight of your laundry to the Loads(Kilo) that is indicated below."
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textSize="14dp"></TextView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textimp"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"

                app:cardBackgroundColor="#1E88E5"
                app:cardCornerRadius="8dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Laundry Shop Services and Prices"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="233dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="45dp"
                    android:text="Wash and Dry"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:textColor="#ffffff"
                    android:textSize="24dp"
                    android:textStyle="bold"></TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="80dp"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/radio_group_kilos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card1"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radio_11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="13dp"
                            android:buttonTint="@color/white"
                            android:paddingStart="12dp"
                            android:text="4-6 kilos "
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#ffffff"
                            android:textSize="16dp"
                            android:textStyle="bold"></RadioButton>

                        <RadioButton
                            android:id="@+id/radio_22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="8dp"
                            android:buttonTint="@color/white"
                            android:paddingStart="12dp"
                            android:text="6-8 kilos "
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#ffffff"
                            android:textSize="16dp"
                            android:textStyle="bold"></RadioButton>

                        <RadioButton
                            android:id="@+id/radio_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="8dp"
                            android:buttonTint="@color/white"
                            android:paddingStart="10dp"
                            android:text="8-10 kilos"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#ffffff"
                            android:textSize="16dp"
                            android:textStyle="bold"></RadioButton>


                        <RadioButton
                            android:id="@+id/radio_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="8dp"
                            android:buttonTint="@color/white"
                            android:text="10-12 kilos"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#ffffff"
                            android:textSize="16dp"
                            android:textStyle="bold"></RadioButton>


                        <RadioButton
                            android:id="@+id/radio_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="8dp"
                            android:buttonTint="@color/white"
                            android:text="12-15 kilos"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#ffffff"
                            android:textSize="16dp"
                            android:textStyle="bold"></RadioButton>

                    </RadioGroup>

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="93dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/washdry_kilo1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="14dp"
                        android:text="____"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="#ffffff"
                        android:textSize="16dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/washdry_kilo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/washdry_kilo1"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="18dp"
                        android:text="____"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="#ffffff"
                        android:textSize="16dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/washdry_kilo3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/washdry_kilo2"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="18dp"
                        android:text="____"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="#ffffff"
                        android:textSize="16dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/washdry_kilo4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/washdry_kilo3"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="18dp"
                        android:text="____"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="#ffffff"
                        android:textSize="16dp"
                        android:textStyle="bold"></TextView>


                    <TextView
                        android:id="@+id/washdry_kilo5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/washdry_kilo4"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="18dp"
                        android:text="____"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="#ffffff"
                        android:textSize="16dp"
                        android:textStyle="bold"></TextView>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/card1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="@color/grey_font"></View>

            <TextView
                android:id="@+id/adds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/v1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Add-Ons "
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textSize="18dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/v1"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:text="Optional"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="@color/grey_font"
                android:textSize="14dp"></TextView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardview4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adds"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:id="@+id/addons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardview3"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="0dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="3">


                        <TextView
                            android:id="@+id/detergent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="₱ 20 Detergent"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"

                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                            android:id="@+id/number_btn1"
                            style="@style/Theme.AppCompat.Light.NoActionBar"
                            android:layout_width="110dp"
                            android:layout_height="25dp"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@+id/textView5"
                            app:backGroundColor="#1E88E5"
                            app:finalNumber="10"
                            app:initialNumber="0"
                            app:textColor="@color/white"
                            app:textSize="5dp"></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

                        <TextView
                            android:id="@+id/Softener"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="₱ 20 Softener"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"


                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                            android:id="@+id/number_btn2"
                            style="@style/Theme.AppCompat.Light.NoActionBar"
                            android:layout_width="110dp"
                            android:layout_height="25dp"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@+id/textView5"
                            app:backGroundColor="#1E88E5"
                            app:backgroundTint="@color/white"
                            app:finalNumber="10"
                            app:initialNumber="0"
                            app:textSize="5dp"></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>


                        <TextView
                            android:id="@+id/Bleach"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="₱ 20 Bleach"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"

                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                            android:id="@+id/number_btn3"
                            style="@style/Theme.AppCompat.Light.NoActionBar"
                            android:layout_width="110dp"
                            android:layout_height="25dp"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@+id/textView5"

                            app:backGroundColor="#1E88E5"
                            app:finalNumber="10"
                            app:initialNumber="0"
                            app:textSize="5dp"></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>


                    </GridLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@id/tx1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/cardview4"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="More Offers"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textSize="18dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardview4"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:text="Optional"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="@color/grey_font"
                android:textSize="14dp"></TextView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tx1"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/radio_iron"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardview4"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="50dp"
                        android:layout_marginBottom="5dp"
                        android:buttonTint="@color/purple_700"
                        android:paddingStart="20dp"
                        android:text="Iron and fold  ₱ 50"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="16dp"
                        android:textStyle="bold"></CheckBox>

                    <CheckBox
                        android:id="@+id/radio_addwash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardview4"
                        android:layout_marginStart="50dp"
                        android:layout_marginEnd="50dp"
                        android:layout_marginBottom="5dp"
                        android:buttonTint="@color/purple_700"
                        android:paddingStart="20dp"
                        android:text="Add Wash  30mins  ₱ 60"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="16dp"
                        android:textStyle="bold"></CheckBox>

                    <CheckBox
                        android:id="@+id/radio_besheets_comfort"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardview4"
                        android:layout_marginStart="50dp"
                        android:layout_marginBottom="5dp"
                        android:buttonTint="@color/purple_700"
                        android:paddingStart="20dp"
                        android:text="Blankets &amp; Curtains  ₱ 60"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="16dp"
                        android:textStyle="bold"></CheckBox>
                    <CheckBox
                        android:id="@+id/radio_blankets_curtains"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardview4"
                        android:layout_marginStart="50dp"
                        android:layout_marginBottom="5dp"
                        android:buttonTint="@color/purple_700"
                        android:paddingStart="20dp"
                        android:text="Bedsheets &amp; Comforters  ₱ 60"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="16dp"
                        android:textStyle="bold"></CheckBox>



                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <View
                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/card22"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/grey_font"></View>


            <TextView
                android:id="@+id/tx2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v2"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="Add Note"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textSize="18dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/tx3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tx2"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:text="Please let us know if you have some instructions for us to provide great services thank you."
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@color/grey_font"
                android:textSize="12dp"></TextView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tx3"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"

                android:layout_marginEnd="5dp"
                app:cardBackgroundColor="@color/grey_font"
                app:cardCornerRadius="8dp">

                <EditText
                    android:id="@+id/discription_edt_txt"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/btn_curve_white"
                    android:hint="Add Note Here "
                    android:inputType="textMultiLine"
                    android:maxLines="150"
                    android:textAlignment="center"
                    android:textSize="14dp"></EditText>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardview5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card7"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="#1E88E5"
                app:cardCornerRadius="8dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/white"></View>

                    <LinearLayout
                        android:id="@+id/lline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:text="Laundry Price"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#ffffff"
                            android:textSize="14dp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="8dp"
                            android:text="Detergent"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#ffffff"
                            android:textSize="14dp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="8dp"
                            android:text="Softener"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#ffffff"
                            android:textSize="14dp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="8dp"
                            android:text="Bleach"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#ffffff"
                            android:textSize="14dp"
                            android:textStyle="bold"></TextView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="10dp"
                            android:text="Iron/Fold"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#ffffff"
                            android:textSize="14dp"
